SET client_encoding = 'UTF8';
SET standard_conforming_strings = off;
SET check_function_bodies = false;
SET client_min_messages = warning;
SET escape_string_warning = off;

CREATE TABLE dingdong (
	id bigint NOT NULL,
	ts timestamp without time zone NOT NULL
);

CREATE SEQUENCE dingdong_id_seq
	INCREMENT BY 1
	NO MAXVALUE
	NO MINVALUE
	CACHE 1;

ALTER SEQUENCE dingdong_id_seq OWNED BY dingdong.id;

ALTER TABLE dingdong ALTER COLUMN id SET DEFAULT nextval('dingdong_id_seq'::regclass);

ALTER TABLE ONLY dingdong
	ADD CONSTRAINT dingdong_pkey PRIMARY KEY (id);

CREATE UNIQUE INDEX rings ON dingdong USING btree (ts);

GRANT INSERT ON TABLE dingdong TO doorbell;

GRANT UPDATE ON SEQUENCE dingdong_id_seq TO doorbell;

CREATE TABLE pachube (
    id bigint NOT NULL,
    key text NOT NULL
);

ALTER TABLE ONLY pachube
    ADD CONSTRAINT pachube_pkey PRIMARY KEY (id);

